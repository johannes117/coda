{
  "name": "coda",
  "version": "0.1.0",
  "packageManager": "bun",
  "description": "coda - Your AI Coding Agent",
  "type": "module",
  "main": "dist/src/electron/main.js",
  "scripts": {
    "build": "tsc && tsc-alias -p tsconfig.json && node scripts/copy-static.js",
    "start": "bun run build && bun x electron dist/src/electron/main.js",
    "dev": "tsc --watch",
    "test": "vitest run --exclude '**/evals/**'",
    "eval": "bun run src/evals/index.ts",
    "evals:seed": "bun run src/evals/seed-dataset.ts",
    "logs:tail": "tail -f ~/.coda/logs/coda.log",
    "copy:renderer": "node scripts/copy-static.js"
  },
  "dependencies": {
    "@langchain/core": "^0.3.77",
    "@langchain/langgraph": "^0.4.9",
    "@langchain/openai": "^0.6.13",
    "electron": "^32.2.0",
    "dotenv": "^17.2.2",
    "langsmith": "^0.3.69",
    "openevals": "^0.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "yargs": "^17.7.2",
    "zod": "^3.23.8",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.11.24",
    "@types/react": "^19.1.8",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "eslint-plugin-unicorn": "^61.0.2",
    "@types/react-dom": "^19.1.4",
    "jsdom": "^26.1.0",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.3.3",
    "vitest": "^3.1.1"
  },
  "engines": {
    "node": ">=20"
  }
}
